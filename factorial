def factorial(n):
    if n == 0 or n ==1:
        return 1
    else:
        return n * factorial(n-1)
num=int(input("enter an integer to calculate its factorial:"))
if num>=0:
        result=factorial(num)
        print(f"the factorial of {num}is: {result}")
else:
        print("invalid input. please enter a non-negative integer")